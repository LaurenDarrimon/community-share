<div class="row mx-5">
    <div class="col-12 col-md-12 mt-5">
        <h1>{{item.title}}</h1>
    </div>
    {{#if item.photo_url}}
    <div class="col-12 col-md-3">
        <img src="{{item.photo_url}}" width="300">
    </div>
    {{/if}}
    <div class="col-12 col-md-9">
        <p>{{item.description}}</p>

        {{#unless item.claimed}}
        {{#if logged_in}}
        <button class="btn btn-primary" id="claim-button" data-id="{{item.id}}">
            Claim
        </button>
        {{/if}}
        {{/unless}}
        {{#if item.claimed}}
        <p><em>This item has already been claimed!</em></p>
        {{/if}}


    </div>
</div>

<br>

<h3>Questions and Comments:</h3>

{{#each item.comments as |comment| }}
    <p><em>posted by {{user.name}}</em></p>
    {{>comments}}
{{/each}}


{{#if logged_in}}
<div class="row mx-5">
    <div class="col-12 col-md-12">
        <form id="item-comment-form" data-id="{{item.id}}">
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-control" id="item-comment-input" rows="3"></textarea>
          </div>
           <div class="form-group">
            <button class="btn btn-primary" type="submit">
            Comment
            </button>
        </div>
        </form>
    </div>
</div>
{{/if}}

<script src="/js/comment.js"></script>

{{#unless item.claimed}}
<script src="/js/claim.js"></script>
{{/unless}}