<div class="row mx-5">
    <div class="col-12 col-md-12 mt-5">
        <h1>{{item.title}}</h1>
    </div>
    {{!-- <div class="col-12 col-md-3">
        <img src="{{item.description}}" width="300">
    </div> --}}
    <div class="col-12 col-md-9">
        <p>{{item.description}}</p>
        <button>Claim</button>
    </div>
</div>

<br>

<h3>Comments by Other Users:</h3>

{{#each item.comments as |comment| }}
    <p><em>posted by {{user.name}}</em></p>
    {{>comments}}
{{/each}}


{{#if logged_in}}
<div class="row mx-5">
    <div class="col-12 col-md-12">
        <form id="item-comment-form" data-id="{{item.id}}">
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-control" id="item-comment-input" rows="3"></textarea>
          </div>
           <div class="form-group">
            <button class="btn btn-primary" type="submit">
            Comment
            </button>
        </div>
        </form>
    </div>
</div>
{{/if}}

<script src="/js/comment.js"></script>