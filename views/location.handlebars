<div class="row d-flex gy-3 justify-content-center">
    <div class="col-12 col-md-9 mt-5">
        <h1>{{location.location}}</h1>
    </div>
    {{#each items as |item|}}
        <div class="card .bg-white col-12 col-md-9">
            <div class="card-body">
                <a href="/item/{{item.id}}"><h3>{{item.title}}</h3></a>
                <p>{{item.description}}</p>
            </div>
        </div>
    {{/each}}
</div>